@model Autos.Models.Auto
@using Autos.Models.Utils

@{
    ViewData["Title"] = $"Eliminar {Model.Marca} {Model.Modelo}";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="Autos" asp-action="Index">Catálogo</a></li>
            <li class="breadcrumb-item active">Eliminar Auto</li>
        </ol>
    </nav>

    <div class="card shadow-sm border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">
                <i class="fa-solid fa-triangle-exclamation me-2"></i>Confirmar Eliminación
            </h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fa-solid fa-exclamation-circle me-2"></i>
                <strong>¿Está seguro que desea eliminar este auto?</strong> Esta acción no se puede deshacer.
            </div>
            
            <h4 class="mb-3">Información del Auto</h4>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Detalles del Vehículo</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Marca:</span>
                                    <strong>@Model.Marca</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Modelo:</span>
                                    <strong>@Model.Modelo</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Año:</span>
                                    <strong>@Model.Anio</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Precio:</span>
                                    <strong>@CurrencyFormatter.FormatCRC(Model.Precio)</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Disponibilidad:</span>
                                    @if (Model.Disponibilidad)
                                    {
                                        <span class="badge bg-success p-2">Disponible</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger p-2">No Disponible</span>
                                    }
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Sucursal:</span>
                                    <strong>@Model.Sucursal?.Direccion</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" id="deleteForm">
                <input type="hidden" asp-for="Id" />
            </form>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i>Volver al Catálogo
                </a>
                <button type="submit" form="deleteForm" class="btn btn-danger">
                    <i class="fa-solid fa-trash me-1"></i>Eliminar Definitivamente
                </button>
            </div>
        </div>
    </div>
</div>
